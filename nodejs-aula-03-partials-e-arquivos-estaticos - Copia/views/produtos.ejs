<%- include ('partials/header.ejs') %>

    <h1>Confira esse produto:</h1>
    <ul>
        <!-- Chamando variável com tags do EJS6g -->
        <li> <%= produto %> </li>
    </ul>

    <!--  ! = operador NOT: verifica se o valor é falso  -->
    <% if (!produto){ %>
        <% produtos.forEach(produto => { %>
            <p><a href="/produtos/<%= produto %>">  <%= produto %></a> </p>
        <% }) %>
        <p> <%= produtos %> </p>
    <% } else { %>
        <p> <%= produtos %> </p>
    <% } %>

    <hr>
    <p>Faça seu pedido agora!</p>
    
